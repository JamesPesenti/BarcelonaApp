{
  "expo": {
    "name": "Visit Barcelona App",
    "slug": "BarcelonaApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "assets/visitbarce.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "assets/visitbarce.png",
      "resizeMode": "contain",
      "backgroundColor": "#f23f3f",
      "borderRadius": "15px"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "buildNumber": "1.0.0",
      "bundleIdentifier": "com.jimpesenti.AppDeBarce"
    },
    "android": {
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "assets/visitbarce.png",
        "backgroundColor": "#f23f3f",
        "borderRadius": "15px"
      },
      "package": "com.jamespesenti.BarcelonaApp"
    },
    "web": {
      "favicon": "assets/visitbarce.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermisson": "The app accesses your photos to let you share them with others",
          "cameraPermisson": "The app needs access to your camera so you can share your favorite pics"
        }
      ]
    ]
  }
}
